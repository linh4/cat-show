<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Edit <%= home.name %></h1>
      <div style="width: 30%; margin: 25px auto">
        <form action="/homes/<%= home._id %>?_method=PUT" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="home[name]" placeholder="name" value="<%= home.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="home[price]" min="0.01" step="0.01" value="<%= home.price %>" placeholder="price">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="home[description]" placeholder="description" value="<%= home.description %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="home[image]" placeholder="image url" value="<%= home.image %>">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
          <a href="/homes">Back</a>
        </form>
      </div>
    </div>
  </div>


<% include ../partials/footer %>
